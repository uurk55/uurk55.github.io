{{- $.Scratch.Add "index" slice -}}
{{- range .Site.RegularPages -}}
    {{- /* Arama motoru için her yazıdan sadece gerekli alanları alıyoruz */ -}}
    {{- $.Scratch.Add "index" (dict "title" .Title "tags" .Params.tags "categories" .Params.categories "summary" .Summary "permalink" .Permalink) -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}